appearance.emptyline=no
appearance.headingpos=centered
appearance.layout=5
appearance.sidebarwidth=33
appearance.theme=green on default
appearance.todoview=hide-completed

format.dayheading=%Y年%m月%d日 (%a)
format.inputdate=4
format.notifydate=%Y年%m月%d日 (%a)
format.outputdate=%Y年%m月%d日 (%a)

general.confirmquit=no
general.firstdayofweek=sunday
general.multipledays=no
general.periodicsave=5

notification.command=exec "${HOME}/.local/lib/dotfiles/calcurse-notify"
notification.notifyall=unflagged-only
notification.warning=1

